<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class ="ExpenseTracker.Settings"
             Title="Settings">
    
    
    <StackLayout Padding="20">
        
        <Label Text="Monthly Budget:" />
        
        
        <Entry 
            x:Name="MonthlyBudgetEntry"
            Keyboard="Numeric"
            Text="{Binding MonthlyBudget}" Placeholder="Enter your monthly budget" />
        
        
        <Label Text="{Binding MonthlyBudgetError}" TextColor="Red" />

        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Dark Mode" VerticalOptions="Center" />
            <Switch IsToggled="{Binding IsDarkMode}" />
        </StackLayout>

        <!--<Label Text="Language:" />
        <Picker Title="Language" SelectedItem="{Binding Language}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>en</x:String>
                    <x:String>es</x:String>
                
                </x:Array>
            </Picker.ItemsSource>
        </Picker>-->

        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Notifications" VerticalOptions="Center" />
            <Switch IsToggled="{Binding NotificationsEnabled}" />
        </StackLayout>
    </StackLayout>
</ContentPage>
