<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExpenseTracker.Settings"
    Title="Settings"
    BackgroundColor="{DynamicResource AppBackgroundColor}">
    

    <!--<ContentPage.BindingContext>
        <viewmodels:SettingsViewModel />
    </ContentPage.BindingContext>-->

    <StackLayout Padding="20" Spacing="20">

        <Label Text="Monthly Budget:" />
        <Entry 
            x:Name="MonthlyBudgetEntry"
            Keyboard="Numeric"
            Text="{Binding MonthlyBudget}" 
            Placeholder="Enter your monthly budget"
            TextChanged="MonthlyBudgetEntry_TextChanged"
            />
        

        <Label 
            Text="{Binding MonthlyBudgetError}" 
            TextColor="Red" 
            IsVisible="{Binding HasError}" />

        <Label Text="Dark Mode:" />
        <Switch 
            IsToggled="{Binding IsDarkMode}" />

        <Button 
            Text="Save Settings" 
            Clicked="SaveSettingsButton_Clicked"
            IsEnabled="{Binding IsSaveButtonEnabled}" />

        
    </StackLayout>

</ContentPage>
