<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:microcharts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="ExpenseTracker.MainPage">
    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Header Section -->
        <Grid Grid.Row="0" Padding="15" BackgroundColor="White">
            <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,15">
                <!-- Title -->
                <Label Text="Expense Tracker"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="0" />
                <!-- Settings Button -->
                <ImageButton Source="settings_icon.png"
                             WidthRequest="30"
                             HeightRequest="30"
                             BackgroundColor="Transparent"
                             Clicked="OnSettingsClicked"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Grid.Column="1" />
            </Grid>
        </Grid>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10">
                <Label Text="Analytics Graph"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
                <ContentView>
                    <!-- Our Graph will be displayed here -->
                    <microcharts:ChartView x:Name="CurrentExpensesChartView"
                                           HeightRequest="300" />
                </ContentView>
                <!-- Additional content placeholder can be added here -->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer Navigation Bar (commented out, if not needed) -->
        <!--
        <Grid Grid.Row="2" BackgroundColor="LightGray">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Button Text="Add" Command="{Binding GoToAddExpense}" />
                <Button Text="History" Command="{Binding GoToHistory}" />
                <Button Text="Report" Command="{Binding GoToReport}" />
                <Button Text="Settings" Command="{Binding GoToSettings}" />
            </HorizontalStackLayout>
        </Grid>
        -->
    </Grid>
</ContentPage>
