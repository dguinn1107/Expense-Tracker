<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.AddExpense"
             Title="AddExpense"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    
    <VerticalStackLayout>
        <Label 
            Text="Add Your Expenses"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
       
       <!-- <Button x:Name="AddExpenseButton"
            Text="Create New Expense"
            BackgroundColor="DarkGreen"
            Clicked="OnAddExpenseClicked"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
        !! Commented your button out in case it is to be used !!
        /> -->

        <CollectionView x:Name="TransactionList"
                ItemsSource="{Binding transactions}"
                HeightRequest="300">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" 
                    Padding="10"
                    FontSize="16"
                    LineBreakMode="WordWrap"/> <!-- the . binds the whole csv string to label -->
                    
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Expense"
        Clicked="OnAddExpenseClicked"/>
        
    </VerticalStackLayout>
</ContentPage>